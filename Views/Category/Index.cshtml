@model IEnumerable<MyEcommerceBook.Models.Category>
@{
    ViewBag.Title = "Category Information";
}

<div class="row">
    <div class="col">
        <h2 class="text-info">Category List</h2>
        <hr />
        <div class="d-flex justify-content-end mb-2">
            <a href="@Url.Action("Create", "Category")" class="button">Add</a>
        </div>
        <div class="table-responsive">
            <table class="table table-condensed table-hover table-bordered table-striped table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(p => p.Name)</th>                       
                        <th>@Html.DisplayNameFor(p => p.CategoryId)</th>                     
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pdt in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(p => pdt.Name)</td>                          
                            <td>@Html.DisplayFor(p => pdt.CategoryId)</td>
                            @*<td>@Html.DisplayFor(p => pdt.SubCategory.Name)</td>*@
                       
                            <td>
                                <a href="@Url.Action("Edit", "Category", new {id = pdt.CategoryId })" class="button">Edit</a>
                                <a href="@Url.Action("Details", "Category", new {id = pdt.CategoryId })" class="button">Details</a>
                                <a href="@Url.Action("Delete", "Category", new {id = pdt.CategoryId })" class="button">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

