@model MyEcommerceBook.Models.SubCategory
@{
    ViewBag.Title = "Conform Delete Category";
}

<Div class="row">
    <div class="col">
        <div class="col-md-12">
            @using (Html.BeginForm("Delete", "Subcategory", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.SubCategoryId)
                @Html.HiddenFor(x => x.CategoryId)
                @Html.AntiForgeryToken()
            <section class="section about-section gray-bg" id="about">
                <div class="container">
                    <div class="row align-items-center flex-row-reverse">
                        <div class="col-lg-8">
                            <div class="about-text go-to">
                                <h2 class="dark-color text-danger">Conform to Delete Product </h2>
                                <hr />
                                <h3 class="theme-color lead fs-2">@Model.Name</h3>
                                <div class="col-md-12">
                                    <label class="fs-4">Description</label>
                                    <p style="text-align:justify;">@Model.Description</p>
                                </div>
                                    <div class="col-md-12">
                                        <label class="fs-4">Description</label>
                                        <p style="text-align:justify;">@Model.Category</p>
                                    </div>
                            </div>
                        </div>                      
                    </div>
                    <div class="counter mt-4">
                        <div class="row">
                            <div class="col-6 col-lg-3">
                                <a href="@Url.Action("Index", "Category")" class="btn btn-info btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Back to the list</a>
                            </div>
                            <div class="col-6 col-lg-3">
                                <button type="submit" class="btn btn-danger fs-4"><i class="fa-solid fa-trash fs-4"></i>&nbsp;Conform Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            }
        </div>
    </div>
</Div>

