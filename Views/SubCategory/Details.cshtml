@model MyEcommerceBook.Models.SubCategory
@{
    ViewBag.Title = "SubCategory Details";
}

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-8">
                <div class="about-text go-to">
                    <h2 class="dark-color">Individual Product Details</h2>
                    <hr />
                    <h3 class="theme-color lead fs-2">@Model.Name</h3>                    
                </div>
            </div>          
        </div>
        <div class="counter mt-4">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <a href="@Url.Action("Index", "SubCategory")" class="btn btn-danger btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Back to the list</a>
                </div>
            </div>
        </div>
    </div>
</section>
